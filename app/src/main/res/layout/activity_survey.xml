<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SurveyActivity">

    <RelativeLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:text="Score"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/points"
            android:fontFamily="casual"
            android:text="0"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/flight" />

    <TextView
            android:text="Have you travelled to a high risk country/Indian state(or)been in contact with someone who is ill and has travelled to a high risk conuntry/Indian state in last 14 days? "
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/question"
            android:fontFamily="casual"
            android:textAlignment="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="casual"
            android:background="#2196F3"
            android:textColor="#fff"
            android:id="@+id/yesButton"
            android:text="Yes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"  />


        <Button
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="casual"
            android:background="#F44336"
            android:textColor="#fff"
            android:id="@+id/noButton"
            android:text="No"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"  />



    </LinearLayout>
</LinearLayout>